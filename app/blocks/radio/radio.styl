.radio
	position relative
	margin-right 20px

	@media $mobile
		margin-right 0
		margin-bottom 10px

	&__input
		position absolute
		left 0
		opacity 0

		&:checked + .radio__label::after
			opacity 1

		&:focus + .radio__label,
		&:focus + .radio__label::before
			opacity .5

	&__label
		position relative
		padding-left 32px
		display inline-block
		font(PTSans-Bold)
		font-size 21px
		line-height 25px
		letter-spacing -.35px
		cursor pointer
		user-select none
		color $black

		&::before
			position absolute
			top -3px
			left -1px
			content ''
			retinaSprite $radio_group

		&::after
			position absolute
			left 7px
			bottom 7px
			content ''
			opacity 0
			retinaSprite $radioactive_group
			transition opacity ease .3s

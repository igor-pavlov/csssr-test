.checkbox
	position relative
	margin-bottom 10px
	width 33%

	@media $mobile
		width 100%

	&__input
		position absolute
		left 0
		opacity 0

		&:checked + .checkbox__label::after
			opacity 1

		&:focus + .checkbox__label,
		&:focus + .checkbox__label::before
			opacity .5

		&:focus + .checkbox__label::before
			width 20px

	&__label
		position relative
		padding-left 27px
		display inline-block
		font(PTSans-Bold)
		font-size 21px
		line-height 25px
		cursor pointer
		color $black

		&::before
			position absolute
			top 4px
			left 0
			content ''
			retinaSprite $checkbox_group

		&::after
			position absolute
			top -6px
			left 3px
			content ''
			opacity 0
			retinaSprite $check_group
			transition opacity ease .3s

.about-me
	margin-top 33px

	@media $mobile
		margin-top 30px

	&__content
		position relative
		margin-left 2px
		padding-x(2px)
		min-height 180px
		font(CourierNew, 400)
		font-size 30px
		line-height 58px
		word-break break-word

		@media $mobile
			padding-x(10px)
			font-size 22px

		&:focus
			opacity .5

		&::after
			position absolute
			top -6px
			left 0
			width 100%
			height 100%
			content ''
			background url('../../textarea-line.png') no-repeat repeat
